pipeline {
    agent any
    environment {
        DOCKER_CREDS = credentials('docker_password')
    }

    stages {
        stage('Build & Test') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Tag & Push image') {
            steps {
                script {
                    // Fetch tags and determine next version
                    sh('git fetch --tags')
                    GIT_TAG = sh(script: "git describe --tags \$(git rev-list --tags --max-count=1)", returnStdout: true).trim()
                    def (MAJOR_VERSION, MINOR_VERSION, PATCH_VERSION) = GIT_TAG.tokenize('.')
                    
                    // Increment minor version
                    int newMinorVersion = MINOR_VERSION.toInteger() + 1
                    
                    // Define the new image tag
                    def newTag = "${MAJOR_VERSION}.${newMinorVersion}.${PATCH_VERSION}"
                    
                    // Build the Docker image with the new tag
                    sh "docker build -t ${DOCKER_CREDS_USR}/triplea-img:${newTag} ."
                    
                    // Log in and push the image
                    sh "echo ${DOCKER_CREDS_PSW} | docker login -u ${DOCKER_CREDS_USR} --password-stdin"
                    sh "docker push ${DOCKER_CREDS_USR}/triplea-img:${newTag}"
                }
            }
        }
    }
}
